            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    {% if section.settings.enable_pagination == true %}
      <div class="swiper-pagination"></div>
    {% endif %}
  </div>

  <div class="studio-shop-wrap {%if section.settings.enable_pagination != true %}pt-10{% endif %}">
    <div class="studio-shop-row flex">
      <div class="shop-all-content coll1 flex items-center px-10">
        <a href="{{section.settings.shop_link}}" class="text-no-decoration">
          <div class="img-container">
            <img class="w-full" src="{{ section.settings.shop_image |  img_url: 'master'}}">
          </div>
          <h3 class="leading-5 f-size-12 font-bold sale-clr lt-space-1 text-center m-0">
            {{ section.settings.shop_text }}
          </h3>
        </a>
      </div>
      <div class="shop-all-product-list swiper product-list coll2 p-0 m-0">
        <div class="swiper-wrapper">
          {% for list in section.settings.product_list %}
            <div class="swiper-slide">
              {% render 'card-product', card_product: list, lazy_load: lazy_load %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>


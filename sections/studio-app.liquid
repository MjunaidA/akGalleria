      <div class="studio-profile-container">
        <div class="profile-row flex items-center">
          <img class="image w-full" src="{{section.settings.profile_img  |  img_url: 'master'}}">
          <h3 class="f-size-14 font-bold leading-5 c-black m-0 pl-10">{{ section.settings.title }}</h3>
          <div
            dir="auto"
            class="css-901oao r-1kihuf0 r-2kwtcw"
            style="color: rgba(40, 44, 63, 0.2); font-size: 8px; margin-right: 8px; margin-left: 8px;"
          >
            â¬¤
          </div>
          <a
            class="follow_btn text-no-decoration f-size-14 font-bold leading-5 m-0"
            href="{{section.settings.follow_link}}"
          >
            {{ section.settings.follow_text }}

<style>
  .studio-section-wraper .studio-profile-wrap .profile-row .image {
    border-radius: 50px;
    border: 1px solid rgba(40, 44, 63, 0.2);
    max-width: 34px;
    max-height: 34px;
  }
  .studio-section-wraper .follow_btn {
    color: #ff3f6c;
  }

  /* Card Styling */
  .studio-section-wraper .card {
    display: flex;
    border: 1px solid rgba(0, 0, 0, 0.3);
    padding: 10px 2px 10px 10px ;
    cursor: pointer;
    min-height: 60px;
  }

  .studio-section-wraper .card--standard > .card__content.card-information-content {
    padding: 0;
  }

  .studio-section-wraper .card-wrapper .card .card__information {
    padding: 0 0 0 8px;
  }
  .studio-section-wraper .card-wrapper .card .card__information .card__heading {
    font-weight: 400;
    font-size: 14px;
  }
  .studio-section-wraper .card .card__inner {
    /* max-width: 43px; */
    /* width: 43px; */
    width: 60px;
  }
  .studio-section-wraper .card .card__inner a{
    display: flex;
  }
  .studio-section-wraper .card__badge,
  .studio-section-wraper .card__heading .studio-section-wraper .card .card__inner .pd-sub-title,
  .studio-section-wraper .card__inner .card__content {
    display: none;
  }
  .studio-section-wraper .price-item,
  .studio-section-wraper .price-item .money {
    font-size: 12px;
  }

  .studio-section-wraper .pd-sub-title {
    display: none;
  }
  .studio-section-wraper .card__media {
    display: flex;
    align-items: center;
    overflow: hidden;
  }
  .studio-section-wraper .price,
  .studio-section-wraper .save-wrapper {
    width: 100%;
  }
  .studio-section-wraper .save-wrapper .save-content{
    text-wrap: nowrap;
    font-size: 10px;
  }
  .studio-section-wraper .price__container {
    line-height: 1;
    width:fit-content;
    max-width: fit-content;
  }
  .studio-section-wraper .wishlist-mbl {
    display: none;
  }
  .studio-section-wraper .save-wrapper .save-content {
    font-weight: 400;
  }

  /* studio wrap styling */

  .studio-section-wraper .studio-shop-wrap .studio-shop-row .shop-all-content {
    min-width: 65px;
  }
  .studio-section-wraper .studio-shop-wrap .studio-shop-row .img-container {
    border: 1px solid rgb(255, 63, 108);
    border-radius: 24px;
    border-width: 1px;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 37px;
    height: 37px;
    padding: 7px;
  }

  .studio-section-wraper .studio-shop-wrap .studio-shop-row .shop-all-product-list {
    width: calc(100% - 65px);
    padding-left: 5px;
  }
  .studio-section-wraper .studio-desc-wrap {
    padding: 0 10px;
    position: relative;
  }
  .studio-section-wraper .studio-desc-wrap p {
    line-height: 20px;
    margin-top: 0;
  }

  /* Description Style */
  .studio-section-wraper .studio-desc-wrap.desc-fix-height {
    max-height: 77px;
    overflow: hidden;
  }
  .studio-section-wraper .studio-desc-wrap .see-more-btn {
    position: absolute;
    bottom: 0;
    right: 0;
    padding: 2px 55px 1px 8px;
    background: #fff;
    line-height: 10px;
  }

  /* Swiper Style */
  .studio-section-wraper .swiper-pagination-bullets.swiper-pagination-horizontal {
    position: relative;
    line-height: 1;
    bottom: 0;
    /* padding: 5px 0 2px 0; */
    margin: 5px 0;
    /* margin-bottom:3px */
  }
  .studio-section-wraper .swiper-slide {
    padding: 0;
    display: flex;
  }
 
  /* Video And Image Style */
  .studio-section-wraper .video-banner video {
    width: 100%;
  }

  .studio-section-wraper .video-play-btn {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  @media(max-width:990px){
    .studio-section-wraper .card{
      padding: 4px;
    }
  }
</style>

<script>
  var slideGap = {{section.settings.slider_gap}};
  var slideQuantity = {{section.settings.slider_limit}};

  galleryMain = new Swiper('.main-{{section.id}} .slide-img', {
    slidesPerView: slideQuantity,
    spaceBetween:slideGap,
    loop: true,
    pagination: {
      clickable: true,
      el: '.swiper-pagination',
    },
  });

  productlistMain = new Swiper('.main-{{section.id}} .product-list', {
    slidesPerView: 1.4,
    spaceBetween: 10,
    loop: true,
    breakpoints: {
        400: {
          // spaceBetween: 10,
          slidesPerView: 1.7
        },
    }
  });
</script>

<script>
  document.getElementById('shareButton').addEventListener('click', async () => {
    if (navigator.share) {
      try {
        await navigator.share({
          title: 'Web Share API Demo',
          text: 'Check out this cool Web Share API!',
          url: 'https://ak-galleria-pk.myshopify.com/pages/studio',
        });
        // console.log('Successfully shared');
      } catch (error) {
        console.error('Error sharing:', error);
      }
    } else {
      // console.log('Web Share API not supported.');
    }
  });
</script>

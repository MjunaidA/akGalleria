<style>
  .sale-banner-main-wrapper {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
</style>

<div class="sale-banner-main-wrapper">
    <img class="w-full" src="{{section.settings.bg_image |  img_url: 'master'}}" alt="Background Image" loading="lazy">
</div>
{% schema %}
    {
      "name": "Sale Banner Desktop",
      "settings": [
       {
         "type": "image_picker",
         "label": "background Image",
         "id": "bg_image"
       },
       {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 80,
          "step": 1,
          "unit": "px",
          "label": "Padding Top",
          "default": 10
       },
       {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 80,
          "step": 1,
          "unit": "px",
          "label": "Pdding Bottom",
          "default": 10
       }
    ],
    "presets": [
        {
          "name": "Sale Banner Desktop",
          "category": "custom content"
        }
      ]
    }
{% endschema %}
<style>
  .thread-desk-main-wrapper {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
</style>

<div class="thread-desk-main-wrapper">
  <div class="page-width">
    <h2 class="home-desk-heading p-30">{{ section.settings.heading }}</h2>
    <p class="font-normal f-size-22 c-light-black m-0 pl-30 pb-30 leading-4">{{section.settings.sub_heading}}</p>
    <a href="{{ section.settings.btn_link }}" class="font-normal f-size-22 c-light-black m-0 pl-30 leading-4">{{section.settings.btn_text}}</a>
    
    <div class="thread-wrapper-inner m-auto overflow-hidden pt-30">
      <div class="thread-row flex gap-x-30">
        {% for block in section.blocks %}
          <div class="thread-col basis-3">
            <a class="link text-no-decoration" href="{{block.settings.image_url}}">
              <div class="content-box">
                <img
                  class="image w-full"
                  src="{{block.settings.image |  img_url: 'master'}}"
                  loading="lazy"
                  alt="brand Image"
                >
                <h3 class="font-normal f-size-22 c-light-black m-0 uppercase pt-10 leading-4">{{block.settings.head}}</h3>
                <p class="font-normal f-size-14 c-light-black m-0 pt-10 leading-4">{{block.settings.paragraph}}</p>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
    {
        "name": "Ak Threads",
        "max_blocks": 3,
        "settings": [
            {
                "type": "text",
                "label": "Enter Heading",
                "id": "heading",
                "default": "The Thread"
            },
            {
                "type": "text",
                "label": "Enter Heading",
                "id": "sub_heading",
                "default": "Your got-to destination for all things, fashion, beauty and lifestyle at AKGalleria"
            },
            {
                "type": "header",
                "content": "Button Content"
            },
            { 
                "type": "text",
                "label": "Enter Button text",
                "id": "btn_text"
            },
            { 
                "type": "url",
                "label": "Paster Button Link",
                "id": "btn_link"
            },
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 160,
                "step": 2,
                "unit": "px",
                "label": "Padding Top",
                "default": 16
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 160,
                "step": 2,
                "unit": "px",
                "label": "Pdding Bottom",
                "default": 16
            }
        ],
        "blocks": [
        {
            "type": "Image",
            "name": "Image Banner",
            "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image Banner"
            },
            {
                "type": "text",
                "id": "head",
                "label": "Enter Heading"
            },
            {
                "type": "text",
                "id": "paragraph",
                "label": "Enter Heading"
            },
            {
                "type": "url",
                "id": "image_url",
                "label": "Image Url"
            }
            ]
        }
        ],
        "presets": [
            {
                "name": "Ak Threads Home",
                "category": "custom content"
            }
        ]
    }
    {% endschema %}
            
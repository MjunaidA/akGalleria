<style>
  .studio-slide-main-wrapper {
      background-color: #f4f4f5;
   }
   .studio-slide-main-wrapper {
     padding-top: {{ section.settings.padding_top }}px;
     padding-bottom: {{ section.settings.padding_bottom }}px;
     display:block;
   }
</style>

<div class="studio-slide-main-wrapper">
  <h2 class="font-bold f-size-16 c-light-black m-0 leading-5 px-10 pt-25 pb-10 studio-bg-clr">{{ section.settings.heading }}</h2>
  <div class="studio-slide-inner overflow-hidden relative bg-white p-10">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="slide-col swiper-slide text-center">
          <a href="{{block.settings.link}}" class="link text-center text-no-decoration w-full flex flex-col">
            <img class="w-full" src="{{ block.settings.image |  img_url: 'master' }}" alt="slider image" loading="lazy">
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Studio slide",
  "settings": [
    {
      "type": "text",
      "label": "Enter Heading",
      "id": "heading",
      "default": "Follow Our Top Influencers"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 80,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 80,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 10
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "label": "Select Image",
          "id": "image"
        },
        {
          "type": "url",
          "label": "Paste Url",
          "id": "link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Studio Slider",
      "category": "customm content"
    }
  ]
}
{% endschema %}

<script>
  var galleryMain = new Swiper('.studio-slide-inner', {
    slidesPerView: 1.6,
    spaceBetween: 10,
  });
</script>

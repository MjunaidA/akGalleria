<style>
  .shoplink-desk-main-wrapper {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  .shoplink-inner-wrap {
    background-color: {{ section.settings.bg-color }}
  }
  .shoplink-desk-main-wrapper li.list:nth-child(1),
  .shoplink-desk-main-wrapper li.list:nth-child(4),
  .shoplink-desk-main-wrapper li.list:nth-child(6) {  
    list-style-type: none;
  }
.shoplink-desk-main-wrapper li.list::marker {
  font-size: 18px;
  color: rgba(114, 114, 114, 1);
  line-height: 0;
}
</style>
<div class="shoplink-desk-main-wrapper">
  <div class="shoplink-inner-wrap py-80">
    <div class="page-width width-600">
      <div class="shoplink-inner text-center">
        <h3 class="font-normal f-size-18 c-light-black m-0 leading-4">{{ section.settings.heading }}</h3>
        <ul class="flex justify-center gap-30 flex-wrap m-0 p-0 pt-40">
          {%- for link in section.settings.shop_link.links -%}
            <li class="list">
              <a class="f-size-40 c-black font-normal m-0 uppercase leading-4 text-center text-no-decoration capitalize" href="{{link.url}}">
                {{ link.title }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Shop Links Desktop",
    "settings": [
      {
        "type": "text",
        "label": "Enter Heading",
        "id": "heading"
      },
      {
        "type": "link_list",
        "label": "Select Navigation",
        "id": "shop_link"
      },
      {
        "type": "color",
        "label": "Select Background Color",
        "id": "bg-color"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 80,
        "step": 1,
        "unit": "px",
        "label": "Padding Top",
        "default": 10
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 80,
        "step": 1,
        "unit": "px",
        "label": "Pdding Bottom",
        "default": 10
      }
    ],
    "presets": [
      {
        "name": "Ak ShopLinks Desktop",
        "category": "custom content"
      }
    ]
  }
{% endschema %}
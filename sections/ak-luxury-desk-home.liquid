<style>
  .luxury-desk-main-wrapper {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    text-decoration: none;
  }
  .luxury-wrapper-inner img{
    filter: contrast({{section.settings.img_contrast}});
  }
  .luxury-desk-main-wrapper .luxury-textbox {
    top: {{section.settings.position_top}}%;
    left:{{section.settings.position_left}}%;
    transform: translate(-{{section.settings.position_left}}%, -{{section.settings.position_top}}%);
  }
</style>

<div class="luxury-desk-main-wrapper">
  <div class="page-width p-0">
    <div class="luxury-wrapper-inner m-auto overflow-hidden relative">
      <img
        class="w-full"
        src="{{section.settings.bg_image |  img_url: 'master'}}"
        loading="lazy"
        alt="Background Image"
      >
      <div class="luxury-textbox absolute position-center">
        <p class="font-bold f-size-16 m-0 uppercase leading-4 text-center {% if section.settings.select_color == 'white'%}c-white{% else %}c-black{% endif %}">
          {{ section.settings.sub_heading }}
        </p>
        <h3 class="font-bold f-size-24 m-0 uppercase py-30 leading-4 text-center {% if section.settings.select_color == 'white'%}c-white{% else %}c-black{% endif %}">
          {{ section.settings.heading }}
        </h3>
        <div class="button-row flex justify-between gap-x-30">
          <a
            class="font-bold f-size-12 m-0 uppercase leading-4 border-1 text-no-decoration py-15 px-20 txt-nowrap {% if section.settings.select_color == 'white'%}c-white border-light-white{% else %}c-black border-light-black{% endif %}"
            href="{{section.settings.btn_link_first}}"
          >
            {{- section.settings.btn_text_first -}}
          </a>
          <a
            class="font-bold f-size-12 m-0 uppercase leading-4 border-1 text-no-decoration py-15 px-20 txt-nowrap {% if section.settings.select_color == 'white'%}c-white border-light-white{% else %}c-black border-light-black{% endif %}"
            href="{{section.settings.btn_link_second}}"
          >
            {{- section.settings.btn_text_second -}}
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Ak Luxury",
  "settings": [
    {
      "type": "select",
      "id": "select_color",
      "label": "Select Color Black/White",
      "options": [
        {
          "value": "black",
          "label": "Black"
        },
        {
          "value": "white",
          "label": "White"
        }
      ],
      "default": "black"
    },
    {
      "type": "range",
      "id": "img_contrast",
      "min": 0.1,
      "max": 1,
      "step": 0.1,
      "unit": "%",
      "label": "Image contrast",
      "default": 0.9
    },
    {
      "type": "image_picker",
      "label": "background Image",
      "id": "bg_image"
    },
    {
      "type": "text",
      "label": "Enter Sub Heading",
      "id": "sub_heading",
      "default": "Luxury swimwear created with care"
    },
    {
      "type": "text",
      "label": "Enter Heading",
      "id": "heading",
      "default": "spring/summer 2024"
    },

    {
      "type": "header",
      "content": "Button content"
    },
    {
      "type": "text",
      "label": "Button Text first",
      "id": "btn_text_first",
      "default": "shop new in"
    },
    {
      "type": "url",
      "label": "Button link first",
      "id": "btn_link_first"
    },
    {
      "type": "text",
      "label": "Button Text second",
      "id": "btn_text_second",
      "default": "shop all swimwear"
    },
    {
      "type": "url",
      "label": "Button link second",
      "id": "btn_link_second"
    },
    {
      "type": "header",
      "content": "Textbox positions"
    },
    {
      "type": "range",
      "id": "position_top",
      "min": 2,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Position Top/Bottom",
      "default": 80
    },
    {
      "type": "range",
      "id": "position_left",
      "min": 2,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Position Left/Right",
      "default": 50
    },
    {
      "type": "header",
      "content": "secion Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 160,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 160,
      "step": 2,
      "unit": "px",
      "label": "Pdding Bottom",
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Ak Luxury",
      "category": "custom content"
    }
  ]
}
{% endschema %}

{{ 'template-collection.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'custom-collection-style.css' | asset_url | stylesheet_tag }}

{% if section.settings.image_shape == 'blob' %}
  {{ 'mask-blobs.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- if section.settings.enable_quick_add -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- style -%}
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }} main-collection-wrapper">
  <div class="width-1600">
    <div class="small-hide medium-hide">
      {% render 'breadcrumbs' %}
      <div class="title-n-product flex items-center pl-25 pt-5 gap-5">
        <h2 class="font-bold f-size-16-lg lt-space-1 m-0 p-0">{{ collection.title }}</h2>
        <p class="m-0">-</p>
        <div class="product-count-vertical light" role="status">
          <h2 class="product-count__text text-body">
            <span id="ProductCountDesktop">
              {%- if collection.results_count -%}
                {{
                  'templates.search.results_with_count'
                  | t: terms: collection.terms, count: collection.results_count
                }}
              {%- elsif collection.products_count == collection.all_products_count -%}
                {{ 'products.facets.product_count_simple' | t: count: collection.products_count }}
              {%- else -%}
                {{
                  'products.facets.product_count'
                  | t: product_count: collection.products_count, count: collection.all_products_count
                }}
              {%- endif -%}
            </span>
          </h2>
        </div>
      </div>
    </div>
    {%- paginate collection.products by section.settings.products_per_page -%}
      {% comment %} Sort is the first tabbable element when filter type is vertical {% endcomment %}
      {% comment %}
        {%- if section.settings.enable_sorting and section.settings.filter_type == 'vertical' -%}
          <facet-filters-form class="facets facets-vertical-sort small-hide no-js-hidden">

          <form class="facets-vertical-form" id="FacetSortForm">

                <div class="facet-filters sorting caption">
                  <div class="facet-filters__field">
                    <h2 class="facet-filters__label caption-large text-body">
                      <label for="SortBy">{{ 'products.facets.sort_by_label' | t }}</label>
                    </h2>
                    <div class="select">
                      {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
                      <select
                        name="sort_by"
                        class="facet-filters__sort select__select caption-large"
                        id="SortBy"
                        aria-describedby="a11y-refresh-page-message"
                      >
                        {%- for option in collection.sort_options -%}
                          <option
                            value="{{ option.value | escape }}"
                            {% if option.value == sort_by %}
                              selected="selected"
                            {% endif %}
                          >
                            {{ option.name | escape }}
                          </option>
                        {%- endfor -%}
                      </select>
                      {% render 'icon-caret' %}
                    </div>
                  </div>
                  <noscript>
                    <button type="submit" class="facets__button-no-js button button--secondary">
                      {{ 'products.facets.sort_button' | t }}
                    </button>
                  </noscript>
                </div>


                <div class="product-count-vertical light" role="status">
                    <h2 class="product-count__text text-body">
                      <span id="ProductCountDesktop">
                        {%- if collection.results_count -%}
                          {{
                            'templates.search.results_with_count'
                            | t: terms: collection.terms, count: collection.results_count
                          }}
                        {%- elsif collection.products_count == collection.all_products_count -%}
                          {{ 'products.facets.product_count_simple' | t: count: collection.products_count }}
                        {%- else -%}
                          {{
                            'products.facets.product_count'
                            | t: product_count: collection.products_count, count: collection.all_products_count
                          }}
                        {%- endif -%}
                      </span>
                    </h2>
                    {%- render 'loading-spinner' -%}
                </div>

            </form>

              <div class="horizontal-filter">
                {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
                  {% render 'facets-horizontol',
                  results: collection,
                  enable_filtering: section.settings.enable_filtering,
                  enable_sorting: section.settings.enable_sorting,
                  filter_type: section.settings.filter_type,
                  paginate: paginate
                  %}
                {% endif %}
              </div>

          </facet-filters-form>
        {%- endif -%}
      {% endcomment %}

      <div class="{% if section.settings.filter_type == 'vertical' %} facets-vertical{% endif %}">
        {{ 'component-facets.css' | asset_url | stylesheet_tag }}
        <script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>
        {% comment %} <script src="{{ 'facets-mbl.js' | asset_url }}" defer="defer"></script> {% endcomment %}
        {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
          <aside
            aria-labelledby="verticalTitle"
            class="facets-wrapper{% unless section.settings.enable_filtering %} facets-wrapper--no-filters{% endunless %}{% if section.settings.filter_type != 'vertical' %} page-width{% endif %} filter-wrapper"
            id="main-collection-filters"
            data-id="{{ section.id }}"
          >
            {% comment %}
              <div class="vertical-filter">
                {% render 'facets',
                results: collection,
                enable_filtering: section.settings.enable_filtering,
                enable_sorting: section.settings.enable_sorting,
                filter_type: section.settings.filter_type,
                paginate: paginate
                %}
                </div>

                {% render 'facets-mbl',
              results: collection,
              enable_filtering: section.settings.enable_filtering,
              enable_sorting: section.settings.enable_sorting,
              filter_type: section.settings.filter_type,
              paginate: paginate
              %}
            {% endcomment %}
            {% comment %}
            {% endcomment %}
            {% render 'custom-facets',
              results: collection,
              enable_filtering: section.settings.enable_filtering,
              enable_sorting: section.settings.enable_sorting,
              filter_type: section.settings.filter_type,
              paginate: paginate
            %}
          </aside>
        {%- endif -%}

        <div
          class="product-grid-container{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          id="ProductGridContainer"
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
          {% endif %}
        >
          <div class="horizontal-filter-main-wrapper flex justify-between">
            <div class="horizontal-filter w-full">
              {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
                {% comment %}
                  {% render 'facets-horizontol',
                    results: collection,
                    enable_filtering: section.settings.enable_filtering,
                    enable_sorting: section.settings.enable_sorting,
                    filter_type: section.settings.filter_type,
                    paginate: paginate
                  %}
                {% endcomment %}

                {% comment %}         {% endcomment %}
                {% render 'new-facet-horizontal',
                  results: collection,
                  enable_filtering: section.settings.enable_filtering,
                  enable_sorting: section.settings.enable_sorting,
                  filter_type: section.settings.filter_type,
                  paginate: paginate
                %}
                {% comment %}
                {% endcomment %}
              {% endif %}
            </div>
            {% comment %}
              <div class="facet-filters sorting caption">
                    <label for="SortBy">{{ 'products.facets.sort_by_label' | t }}</label>
                  </h2>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="w-6 h-6"
                    width="12"
                    height="12"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 6h9.75M10.5 6a1.5 1.5 0 1 1-3 0m3 0a1.5 1.5 0 1 0-3 0M3.75 6H7.5m3 12h9.75m-9.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-3.75 0H7.5m9-6h3.75m-3.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-9.75 0h9.75" />
                  </svg>

                  <div class="select">
                    {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
                    <select
                      name="sort_by"
                      class="facet-filters__sort select__select caption-large"
                      id="SortBy"
                      aria-describedby="a11y-refresh-page-message"
                    >
                      {%- for option in collection.sort_options -%}
                        <option
                          value="{{ option.value | escape }}"
                          {% if option.value == sort_by %}
                            selected="selected"
                          {% endif %}
                        >
                          {{ option.name | escape }}
                        </option>
                      {%- endfor -%}
                    </select>
                    {% render 'icon-caret' %}
                  </div>
                </div>
                <noscript>
                  <button type="submit" class="facets__button-no-js button button--secondary">
                    {{ 'products.facets.sort_button' | t }}
                  </button>
                </noscript>
              </div>
            {% endcomment %}
          </div>
          {%- if collection.products.size == 0 -%}
            <div
              class="collection collection--empty page-width"
              id="product-grid"
              data-id="{{ section.id }}"
            >
              <div class="loading-overlay gradient"></div>
              <div class="title-wrapper center">
                <h2 class="title title--primary">
                  {{ 'sections.collection_template.empty' | t -}}
                  <br>
                  {{
                    'sections.collection_template.use_fewer_filters_html'
                    | t: link: collection.url, class: 'underlined-link link'
                  }}
                </h2>
              </div>
            </div>
          {%- else -%}
            <div class="collection{% if section.settings.filter_type != 'vertical' %} page-width{% endif %}">
              <div class="loading-overlay gradient"></div>

              {% comment %} test {% endcomment %}
              {% comment %}
                <ul
                                id="product-grid"
                                data-id="{{ section.id }}"
                                class="grid product-grid grid--{{ section.settings.columns_mobile }}-col-tablet-down mt-0"
                              >
                                {% assign bannerMetafields = collection.metafields.custom.collection_inner_banner_mobile.value %}
                                {% assign product_counter = 0 %}
                                {% assign banner_index = 0 %}
                                {% assign collection_banner_counter = 0 %}
                                {%- for product in collection.products -%}
                                  {% assign lazy_load = false %}
                                  {%- if forloop.index > 2 -%}
                                    {%- assign lazy_load = true -%}
                                  {%- endif -%}

                                  <li
                                    class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                                    {% if settings.animations_reveal_on_scroll %}
                                      data-cascade
                                      style="--animation-order: {{ forloop.index }};"
                                    {% endif %}
                                  >
                                    {% render 'card-product',
                                      card_product: product,
                                      media_aspect_ratio: section.settings.image_ratio,
                                      image_shape: section.settings.image_shape,
                                      show_secondary_image: section.settings.show_secondary_image,
                                      show_vendor: section.settings.show_vendor,
                                      show_rating: section.settings.show_rating,
                                      lazy_load: lazy_load,
                                      show_quick_add: section.settings.enable_quick_add,
                                      section_id: section.id
                                    %}
                                  </li>

                                  {% assign collection_banner_counter = collection_banner_counter | plus: 1 %}
                                  {% if collection_banner_counter == 4 %}
                                    <div class="w-full large-up-hide">

                                      {% for banners in bannerMetafields %}

                                        <p>---_{{ banners[1].link.value }}</p>
                                        <p>---_{{ banner.link.value }}</p>
                                        <img class="w-full" src="{{ banners.banner.value | img_url: 'master' }}">

                                      {% endfor %}
                banner count-{{collection_banner_counter}}
                                    </div>
                                    {% assign collection_banner_counter = 0 %}
                                    banner count--{{collection_banner_counter}}
                                  {% endif %}
                                {%- endfor -%}
                              </ul>
              {% endcomment %}

              <div id="AjaxinateContainer">
                <ul
                  id="product-grid"
                  data-id="{{ section.id }}"
                  class="grid product-grid grid--{{ section.settings.columns_mobile }}-col-tablet-down mt-0"
                >
                  {% assign bannerMetafields = collection.metafields.custom.collection_inner_banner_mobile.value %}
                  {% assign product_counter = 0 %}
                  {% assign collection_banner_counter = 0 %}
                  {% assign banner_index = 0 %}

                  {%- for product in collection.products -%}
                    {% assign lazy_load = false %}
                    {%- if forloop.index > 2 -%}
                      {%- assign lazy_load = true -%}
                    {%- endif -%}

                    <li
                      class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                      {% if settings.animations_reveal_on_scroll %}
                        data-cascade
                        style="--animation-order: {{ forloop.index }};"
                      {% endif %}
                    >
                      {% render 'card-product',
                        card_product: product,
                        media_aspect_ratio: section.settings.image_ratio,
                        image_shape: section.settings.image_shape,
                        show_secondary_image: section.settings.show_secondary_image,
                        show_vendor: section.settings.show_vendor,
                        show_rating: section.settings.show_rating,
                        lazy_load: lazy_load,
                        show_quick_add: section.settings.enable_quick_add,
                        section_id: section.id
                      %}
                    </li>

                    {% assign collection_banner_counter = collection_banner_counter | plus: 1 %}
                    {% if collection_banner_counter == 8 %}
                      <div class="w-full large-up-hide pt-0 pb-10">
                        {% assign banner_counter = 0 %}
                        {% comment %} {% assign banner_index = 0 %} {% endcomment %}
                        {% for banner in bannerMetafields %}
                          {% if banner_counter == banner_index %}
                            <a class="flex" href="{{ banner.link.value }}">
                              <img class="w-full" src="{{ banner.banner.value | img_url: 'master' }}">
                            </a>
                          {% endif %}
                          {% assign banner_counter = banner_counter | plus: 1 %}
                        {% endfor %}
                        {% assign banner_index = banner_index | plus: 1 %}
                        {% assign collection_banner_counter = 0 %}
                      </div>
                    {% endif %}
                  {%- endfor -%}
                </ul>
              </div>

              <div class="medium-hide small-hide">
                {%- if paginate.pages > 1 -%}
                  {% render 'pagination', paginate: paginate, anchor: '' %}
                {%- endif -%}
              </div>
              <div id="AjaxinatePagination" class="large-up-hide">
                <div class="loadmore flex justify-center items-center ">
                  {% if paginate.next %}
                    <a href="{{ paginate.next.url }} " class="loadmore-link text-no-decoration c-black leading-5 "
                      >Loading More</a
                    >
                  {% endif %}
                </div>
              </div>
            </div>
          {%- endif -%}
        </div>
      </div>
    {%- endpaginate -%}
    {% if section.settings.image_shape == 'arch' %}
      {% render 'mask-arch' %}
    {%- endif -%}
  </div>
</div>


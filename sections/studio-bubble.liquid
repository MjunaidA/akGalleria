<style>
  .studio-bubble-main-wrapper{
      padding-top:{{section.settings.padding_top}}px;
      padding-bottom:{{section.settings.padding_bottom}}px;
  }
</style>
<div class="studio-bubble-main-wrapper">
  <h2 class="font-bold f-size-16 c-light-black m-0 leading-5 px-10 pt-15 pb-10 lt-space-1 studio-bg-clr">{{ section.settings.heading }}</h2>
  <div class="studio-bubble-wrapper-inner studio-bubble-main bg-white overflow-hidden">
    <div class="studio-bubble-row swiper-wrapper justify-between bg-white py-5">
      {% for block in section.blocks %}
        <div class="bubble-col swiper-slide text-center">
          <a class="link text-center text-no-decoration" href="{{block.settings.link}}">
            <div class="image-box flex p-5 overflow-hidden m-x-100 m-h-100 ">
              <img
                class="image w-full"
                src="{{block.settings.image |  img_url: 'master'}}"
                loading="lazy"
                alt="bubble Image"
              >
            </div>
            {% if block.settings.text != blank %}
              <p class="text font-normal f-size-14 c-light-black m-0 uppercase pt-10 leading-4">
                {{ block.settings.text }}
              </p>
            {% endif %}
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Studio Bubble",
  "settings": [
    {
      "type": "text",
      "label": "Enter Heading",
      "id": "heading",
      "default": "Guide to Influencers' Most Coveted Looks"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 80,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 80,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 10
    }
  ],
  "blocks": [
    {
      "type": "Bubble",
      "name": "Bubble",
      "settings": [
        {
          "type": "image_picker",
          "label": "Select Image",
          "id": "image"
        },
        {
          "type": "text",
          "label": "Enter Text",
          "id": "text"
        },
        {
          "type": "url",
          "label": "Paste Url",
          "id": "link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Studio Bubble Section",
      "category": "customm content"
    }
  ]
}
{% endschema %}

<script>
  galleryMain = new Swiper('.studio-bubble-main', {
    slidesPerView: 4.3,
  });
</script>

    {%- when 'explore_category_grid' -%}
      {% render 'ak-explore-category-grid-mbl', block: block %}
    {%- when 'ak_mbl_home_banner' -%}
      {% render 'ak-mbl-banner', block: block %}
    {%- when 'ak_mbl_countdown_timer' -%}
      {% render 'ak-mbl-countdown-timer', block: block %}
    {%- when 'ak_mbl_landing' -%}

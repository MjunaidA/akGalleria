<style>
  .exclusive-main-banner .exclusive-banner-inner .textbox {
    top: {{section.settings.position_top}}%;
    left:{{section.settings.position_left}}%;
      transform: translate(-{{section.settings.position_left}}%, -{{section.settings.position_top}}%);
      width:{{section.settings.width}}%
    }

    video{
        width: 100%;
    }
    .exclusive-main-banner .exclusive-banner-inner .video-controls {
      position: absolute;
      bottom: 5%;
      left: 50%;
      transform: translate(-50%,-5%);
      z-index: 2;
      width: 90%;
      /* border: 1px solid rgba(255,255,255,0.2); */
    }

    @media(min-width:990px){
        .exclusive-main-banner .exclusive-banner-inner .textbox .para{
            max-width: 325px;
        }
        .exclusive-main-banner .exclusive-banner-inner .video-controls{
          width: 95%;
        }
    }
</style>
<div class="exclusive-main-banner">
  <div class="page-width p-0">
    <div class="exclusive-banner-inner relative">
      {% if section.settings.image_or_video == 'image' %}
        <img
          class="w-full small-hide medium-hide"
          src="{{section.settings.image_desk |  img_url: 'master'}}"
          alt="banner Image"
          loading="lazy"
        >
        <img
          class="w-full large-up-hide"
          src="{{section.settings.image_mbl |  img_url: 'master'}}"
          alt="banner Image"
          loading="lazy"
        >

      {% else %}
        <div class="video-banner-desk w-full small-hide medium-hide">
          {{ section.settings.video_desk | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
        </div>
        <div class="video-banner-mbl w-full large-up-hide">
          {{ section.settings.video_mbl | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
        </div>
      {% endif %}
      <div class="textbox text-center absolute">
        <h2 class="f-size-48-lg f-size-24 c-dark-black leading-9 font-bold p-0 m-0">{{ section.settings.heading }}</h2>
        <p class="para f-size-12-lg c-dark-black leading-5 lt-space-1 m-auto py-10">{{ section.settings.paragraph }}</p>
        <a
          class="f-size-12-lg bg-black c-white leading-5 lt-space-1 text-no-decoration uppercase px-40 py-10"
          href="{{section.settings.button_link}}"
        >
          {{- section.settings.button_text -}}
        </a>
      </div>
      <div class="video-controls flex justify-between">
        <div class="play-pause">
          <svg
            class="play pointer cstm-hide"
            width="26"
            height="26"
            viewBox="0 0 26 26"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            xmlns:xlink="http://www.w3.org/1999/xlink"
          >
            <rect x="0.765625" y="0.488281" width="24.8092" height="24.8092" fill="url(#pattern0_656_377)"/>
            <defs>
            <pattern id="pattern0_656_377" patternContentUnits="objectBoundingBox" width="1" height="1">
            <use xlink:href="#image0_656_377" transform="scale(0.01)"/>
            </pattern>
            <image id="image0_656_377" width="100" height="100" xlink:href="data:image/png;base64,"/>
            </defs>
          </svg>
          <svg
            class="pause pointer"
            width="26"
            height="26"
            viewBox="0 0 30 30"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >

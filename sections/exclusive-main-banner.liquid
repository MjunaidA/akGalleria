  const bannerVideoDesk = document.querySelector('.video-banner-desk video');
  const bannerVideoMbl = document.querySelector('.video-banner-mbl video');
  const play = document.querySelector('.video-controls .play');
  const pause = document.querySelector('.video-controls .pause');
  const mute = document.querySelector('.video-controls .mute');
  const unmute = document.querySelector('.video-controls .unmute');

  play.addEventListener('click', togglePlay);
  pause.addEventListener('click', togglePause);
  mute.addEventListener('click', toggleMute);
  unmute.addEventListener('click', toggleUnmute);

  function togglePlay() {
    handlePlayPause(true);
  }

  function togglePause() {
    handlePlayPause(false);
  }

  function handlePlayPause(playState) {
    play.classList.toggle('cstm-hide', playState);
    pause.classList.toggle('cstm-hide', !playState);
    if (window.innerWidth < 990) {
      playState ? bannerVideoMbl.play() : bannerVideoMbl.pause();
    } else {
      playState ? bannerVideoDesk.play() : bannerVideoDesk.pause();
    }
  }

  function toggleMute() {
    handleMuteUnmute(true);
  }

  function toggleUnmute() {
    handleMuteUnmute(false);
  }

  function handleMuteUnmute(isMute) {
    mute.classList.toggle('cstm-hide', isMute);
    unmute.classList.toggle('cstm-hide', !isMute);
    bannerVideoDesk.muted = bannerVideoMbl.muted = !isMute;
  }
</script>
